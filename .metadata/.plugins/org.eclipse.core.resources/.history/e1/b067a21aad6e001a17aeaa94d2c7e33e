#include "time_display.h"
void display_time_standard(uint32_t time_in_seconds) {


    uint32_t minutes = time_in_seconds /60;
    uint32_t seconds = (time_in_seconds - (minutes * 60));
    uint32_t seconds = (time_in_seconds - (minutes * 60) - (seconds));

    snprintf(time_display_buffer, sizeof(time_display_buffer), "Time = %02u:%02u:%02u", hours,minutes,seconds); // convert time to string
    GrContextForegroundSet(&sContext, ClrYellow); // yellow text
    GrStringDraw(&sContext, time_display_buffer, -1,  0, 0,  false);
    GrFlush(&sContext); // flush the frame buffer to the LCD


}
